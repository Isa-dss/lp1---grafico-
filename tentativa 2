package GraficoCovid;

import org.jfree.data.category.CategoryDataset;

public class ExercicioCovid {

	public CategoryDataset createDataSet(ArrayList<pessoaInfectada> ListaDePessoasInfectadas) {
		
		DefautCategoryDataset dataset = new DefaultCategoryDataset();
		
		for(PessoasInfectadas pessoasInfectadas : ListaDePessoasInfectadas) {
			dataSet.addValue(pessoasInfectada.getHoras(), pessoasInfectada.getDias(),  pessoasInfectada.getMeses(), "");
		}
		return dataSet;
	}
	
	public JFreeChart createBarChart(CategoryDataset dataSet) {
	
	JFreeChart graficoBrras = ChartFactory.createBarChart {"pessoas infectadas", "", "horas", "dias", "meses", 
	dataSet, PolotOrientation.VERTCAL, true, false, false);
	
	return graficoBarras;
	
	}
	
	
	public ChartPanel criarGrafico(ArrayLista<PessoasInfectadas> listaDePessoas infectadas) {
		
		CategoryDataset dataSet = this.createDataSet(ListaDePessoasInfectadas);
		
		JFreeChart grafico = this.createBarChart(dataSet);
		
		painelDoGrafico.setPreferreSize(new Dimension(400, 400));
		
		return painelDoGrafico;
	}
	
}



Classe 2

package GraficoCovid;

public class PessoasInfectadas {
	
	private int horas;
	private int dias;
	private int meses;
	
	public PessoasInfectadas(String nome, int idade) {
		this.horas = horas;
		this.dias = dias;
		this.meses = meses;
	}
	
	public String getHoras() {
		return horas;
	}
	
	public String getDias{
		return dias;
	}
	
	public int getMeses() {
		return meses;
	}
	

}


