package GraficoCovid;

import java.aut.BorderLayout;

    public JanelaboGrafico extends javax.swing.JF() (

    public class JanelaGrafico {
	initComponents();

	this.jpnGrafico.setLayout (new BorderLayout ());
	
	ArrayList<PessoasIntfectadas> ListaDePessoasInfectadas = new ArrayLista<>();
	ListaDePessoasInfectadas.add(new horas, dias, meses ("12:00", 1, 1));
	ListaDePessoasInfectadas.add(new horas, dias, meses ("13:00", 2, 2));
	ListaDePessoasInfectadas.add(new horas, dias, meses ("14:00", 3, 3));
	ListaDePessoasInfectadas.add(new horas, dias, meses ("15:00", 4, 4));
	ListaDePessoasInfectadas.add(new horas, dias, meses ("16:00", 5, 5));
	
	GraficoDeBarra graficoDeBarra = new GraficoDeBarra();
	
	this.JpnGrafico.setLayout (new BorderLayout());
	this.JpnGrafico.add(graficoDeBarr.criarGrafico(listaDePessoasInfectadas));
	
	pack();

	}
}

